---
meta:
author: Michael Kim
scripts:
- ../src/index.ts
stylesheets:
- ../src/scss/common.scss
title: Chat Page
---
{{#extend "base"}}
    {{#content "main"}}
        {{#extend "profile-base"}}
            {{#content "content"}}
                <div>
                    {{>avatar}}
                    <div class="profile-list">
                        {{#each profile.password}}
                            {{#extend "profileFormItem" isHtml=true}}
                                {{#content "label"}}
                                    {{label}}
                                {{/content}}
                                {{#content "value"}}
                                    {{>input label='' type='password' modify='border-none' value=value}}
                                {{/content}}
                            {{/extend}}
                        {{/each}}
                    </div>
                </div>
                <div class="center">
                    {{>button text='Сохранить'}}
                </div>
            {{/content}}
        {{/extend}}
    {{/content}}
{{/extend}}
