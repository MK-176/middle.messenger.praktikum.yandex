<div class="profile-form-item{{#if isHtml}} profile-form-item--html{{/if}}">
    {{#if label}}
        {{#if isHtml}}
            <div class="profile-form-item__label">
                {{#block "label"}}{{/block}}
            </div>
            <div class="profile-form-item__value">
                {{#block "value"}}{{/block}}
            </div>
        {{else}}
            <div class="profile-form-item__label">{{label}}</div>
            <div class="profile-form-item__value">{{value}}</div>
        {{/if}}
    {{else}}
        <div class="profile-form-item__block">
            {{#block "text"}}{{/block}}
        </div>
    {{/if}}
</div>
